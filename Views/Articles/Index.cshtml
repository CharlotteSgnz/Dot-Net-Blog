@model IEnumerable<Blog.Models.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br />
<br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Pseudo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cover)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.User.Pseudo)
    </td>
    <td>
        @Html.ActionLink(item.Title, "Details", new { id = item.ArticleID })

    </td>
    <td>
        <img src="@item.Cover" alt="Placeholder image">
    </td>
    
    <td>
        @Html.DisplayFor(modelItem => item.Resume)
    </td>
    <td>
        @Html.Raw(item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ArticleID })
        @Html.ActionLink("Details", "Details", new { id = item.ArticleID })
        @Html.ActionLink("Delete", "Delete", new { id = item.ArticleID })
    </td>
</tr>
    }

</table>
